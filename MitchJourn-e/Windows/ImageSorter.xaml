<Window x:Class="MitchJourn_e.Windows.ImageSorter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MitchJourn_e.Windows"
        mc:Ignorable="d"
        Title="Sorting images..." Height="226" Width="363">
    <Border Background="#E5FFFFFF">
        <StackPanel Margin="4">
            <Label Visibility="Collapsed" Content="Processing..." />
            <ProgressBar Height="20" IsIndeterminate="True" Margin="32"/>
            <Button Content="Cancel" Width="80" Margin="32" Click="Button_Click"/>
        </StackPanel>
    </Border>
</Window>
